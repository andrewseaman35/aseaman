{% import "macros.jinja2" as macros with context %}

<!doctype html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1" name="viewport" />

        <title>{% block page_title %}Andrew Seaman{% endblock %}</title>
        <meta name="description" content="Andrew Seaman's personal website">
        <meta name="author" content="Andrew Seaman">

        <link rel="stylesheet" type="text/css" href="{{ ROOT_URL }}css/main.css" />
        <link rel="icon" type="image/ico" href="/img/favicon.ico"/>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">

        <script src="https://sdk.amazonaws.com/js/aws-sdk-2.283.1.min.js"></script>

        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id={{ GA_TRACKING_ID }}"></script>
        <script>
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', '{{ GA_TRACKING_ID }}');
        </script>


        <script>
            (function() {
                'use strict';
                window.aseaman = {};
                window.aseaman._js = [];
                window.aseaman.ready = function(callback) {
                    window.aseaman._js.push(callback);
                };
            })();
        </script>

        {% block include_js %}{% endblock %}

        <script src="{{ ROOT_URL }}js/bundle.js"></script>
    </head>

    <body id="{% block page_id %}id{% endblock %}" class="{% block body_class %}{% endblock %}">
        <div id="fullscreen-loading-overlay">
            <div class="loading-text-container">
                {{ macros.animated_ellipsis('Loading') }}
            </div>
        </div>
        <div id="site-navigation"></div>

        <div id="lightbox"></div>
        <div class="main-content">
            {% block content %}{% endblock %}
        </div>
        {% block footer %}
            {% include 'footer.jinja2' %}
        {% endblock %}
    </body>

</html>
